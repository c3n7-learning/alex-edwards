{{template "base" .}}

{{define "title"}}Home{{ end }}

{{define "body"}}
<h2>Latest Snippets</h2>
<!-- prettier-ignore -->
{{if .Snippets}}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Created</th>
      <th scope="col">ID</th>
    </tr>
  </thead>
  <tbody>
    <!-- prettier-ignore -->
    {{range.Snippets}}
    <!-- prettier-ignore -->
    <tr>
      <td><a href="/snippet?id={{.ID}}">{{.Title}}</a></td>
      <td>{{.Created}}</td>
      <td>#{{.ID}}</td>
    </tr>
    <!-- prettier-ignore -->
    {{ end }}
  </tbody>
</table>
{{else}}
<p>There's nothing to see here yet</p>
{{ end }}
{{ end }}
